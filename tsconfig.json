{
  "compilerOptions": {
    "target": "ES2019",              // or ES2020
    "module": "CommonJS",
    "lib": ["ES2019"],               // modern ECMAScript features
    "rootDir": "apis/drive",         // your .ts source folder
    "outDir": "build",               // where compiled .js files go
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,            // skip type checks in node_modules
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "apis/drive/**/*.ts"
  ]
}
