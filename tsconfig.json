{
  "compilerOptions": {
    // Tell TS your source starts in apis/drive
    "rootDir": "apis/drive",

    // The compiled .js output will go here
    "outDir": "build/apis/drive",

    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES2019"],
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true
  },
  // Only compile the .ts files inside apis/drive
  "include": ["apis/drive/**/*.ts"]
}

